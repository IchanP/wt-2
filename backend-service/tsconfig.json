{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ESNext",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "./types/**/*"],
  "exclude": ["node_modules"]
}

